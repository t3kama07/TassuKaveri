rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow only CREATEs to promoSignups with strict field + length validation.
    match /promoSignups/{docId} {
      allow read: if false; // no public reads
      allow create: if
        request.resource.data.keys().hasOnly(['email','name','createdAt','userAgent','language','path']) &&
        request.resource.data.email is string &&
        request.resource.data.email.size() > 3 && request.resource.data.email.size() < 200;
      allow update, delete: if false;
    }
    // Deny everything else by default
    match /{document=**} { allow read, write: if false; }
  }
}
